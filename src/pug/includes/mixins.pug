mixin headname(main, title)
  h3= main
    |  -  
    = title

mixin formatCssCode(type, ...args)
  pre
    span= type
    |
    - var count = args.length - 1
    each val, index in args      
      if index == 0
        |
        |#{val}
      else if index == count
        |
        |#{val}
      else
        |
        |   #{val}

mixin formatHtmlCodeComplex(type, levels, ...args)
  pre
    span= type
    |
    - var count = args.length - 1
    each val, index in args      
      if index == 0
        |
        |#{val}
      else if index == count
        |
        |#{val}
      else if levels == true
        |
        |   #{val}
      else
        |
        |#{val}

mixin formatHtmlCodeSimple(type, code)
  pre
    span= type
    |
    |#{code}

mixin codeExampleBlock(title, divClass, pClass, text)
  hr
  h3= title
  article
    h5 Sample Content
    div(class=divClass)
      p(class=pClass)
        |#{text}